  <description>Componenta folosita la siteauto.ro</description>
  <scriptfile>install/script.php</scriptfile>
  <install>
    <sql>
      <file driver="mysql" charset="utf8">install/sql/mysql/install.utf8.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">install/sql/mysql/uninstall.utf8.sql</file>
    </sql>
  </uninstall>
  <update>
    <schemas/>
  </update>
  <files folder="site">
    <folder>assets</folder>
    <folder>language</folder>
    <folder>models</folder>
    <folder>views</folder>
    <filename>controller.php</filename>
    <filename>index.html</filename>
    <filename>sauto.php</filename>
	<filename>popup.php</filename>
	<filename>popup.js</filename>
  </files>
  <administration>
    <menu img="../media/com_sauto/images/administrator/com_sauto-16.png">sauto</menu>
    <submenu>
      <menu img="class:class:component" link="option=com_sauto">sauto</menu>
    </submenu>
    <files folder="admin">
      <folder>assets</folder>
      <folder>install</folder>
      <folder>language</folder>
      <filename>config.xml</filename>
      <filename>index.html</filename>
      <filename>sauto.php</filename>
    </files>
  </administration>
  <media destination="com_sauto" folder="media">
    <folder>css</folder>
    <folder>images</folder>
    <filename>index.html</filename>
  </media>
</extension>
