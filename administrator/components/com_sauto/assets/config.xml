<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="component"
              label="COM_SAUTO_FIELDSET_CONFIG_CLIENT_OPTIONS_LABEL"
              description="COM_SAUTO_FIELDSET_CONFIG_CLIENT_OPTIONS_DESC">

        <field
                name="emotional_status"
                type="radio"
                class="btn-group"
                default="0"
                label="COM_SAUTO_FIELD_ONE_LABEL"
                description="COM_SAUTO_FIELD_ONE_DESCRIPTION">
            <option
                    value="1">JNO
            </option>
            <option
                    value="2">JYES
            </option>
        </field>

        <field
                name="my_custom_message"
                type="text"
                label="COM_SAUTO_FIELD_TWO_LABEL"
                description="COM_SAUTO_FIELD_TWO_DESCRIPTION"/>

    </fieldset>

    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
            >

        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                class="inputbox"
                filter="rules"
                validate="rules"
                component="com_sauto"
                section="component"/>
    </fieldset>
</config>
